{
    "name": "catpaw/starter",
    "type": "project",
    "description": "A php CatPaw starter template",
    "homepage": "https://github.com/tncrazvan/catpaw-starter",
    "license": "MIT",
    "scripts": {
        "load": "XDEBUG_MODE='off' composer dump-autoload -o",
        "fix": [
            "php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix src",
            "php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix tests"
        ],
        "action:test": [],
        "test": [],
        "start": "php -dxdebug.mode=debug ./bin/start -e./src/main.php -l./src/lib/ -i",
        "watch": "php -dxdebug.mode=debug ./bin/start -e./src/main.php -l./src/lib/ -r./resources/ -i -w",
        "build": "php -dxdebug.mode=off -dphar.readonly=0 ./bin/start -e./bin/build"
    },
    "authors": [
        {
            "name": "Razvan Tanase",
            "email": "tangent.jotey@gmail.com",
            "homepage": "https://github.com/tncrazvan",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/lib/"
        }
    },
    "require": {
        "php": "^8.1",
        "catpaw/core": "^0.2",
        "amphp/amp": "^2.6",
        "amphp/file": "^2.0"
    },
    "autoload-dev": {
        "Tests\\": "tests/"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpunit/phpunit": "^9",
        "vimeo/psalm": "^4.23"
    },
    "config": {
        "preferred-install": "dist",
        "process-timeout": 0
    }
}