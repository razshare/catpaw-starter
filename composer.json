{
  "name": "catpaw/starter",
  "type": "project",
  "description": "A php CatPaw starter template",
  "homepage": "https://github.com/tncrazvan/catpaw-starter",
  "license": "MIT",
  "keywords": [
    "php",
    "cli",
    "server",
    "http",
    "websocket",
    "starter",
    "template",
    "catpaw"
  ],
  "scripts": {
    "load": "composer dump-autoload -o",
    "script": "php -dxdebug.start_with_request=yes -dxdebug.mode=debug ./vendor/catpaw/core/scripts/start.php",
    "fix": [
      "php ./vendor/bin/php-cs-fixer fix src",
      "php ./vendor/bin/php-cs-fixer fix tests"
    ],
    "test": "php -dxdebug.start_with_request=yes -dxdebug.mode=debug vendor/bin/phpunit tests",
    "start": "php -dxdebug.start_with_request=yes -dxdebug.mode=debug ./vendor/catpaw/core/scripts/start.php src/main.php",
    "watch": "php -dxdebug.start_with_request=yes -dxdebug.mode=debug ./vendor/catpaw/core/scripts/start.php src/main.php watch 100 && composer start",
    "start-prod": "php ./vendor/catpaw/core/scripts/start.php src/main.php",
    "watch-prod": "php ./vendor/catpaw/core/scripts/start.php src/main.php watch 100 && composer start-prod",
    "dev": "@watch"
  },
  "authors": [
    {
      "name": "Razvan Tanase",
      "email": "tangent.jotey@gmail.com",
      "homepage": "https://github.com/tncrazvan",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/lib/"
    }
  },
  "require": {
    "php": "^8.1",
    "catpaw/core": "^1.3",
    "amphp/amp": "^2.6",
    "amphp/file": "^2.0"
  },
  "autoload-dev": {
    "Tests\\": "tests/"
  },
  "require-dev":{
    "friendsofphp/php-cs-fixer": "^3.8",
    "amphp/phpunit-util": "^2.0"
  },
  "config": {
    "preferred-install": "dist",
    "process-timeout": 0
  }
}
