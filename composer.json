{
  "name": "catpaw/starter",
  "type": "project",
  "description": "A php CatPaw starter template",
  "homepage": "https://github.com/tncrazvan/catpaw-starter",
  "license": "MIT",
  "scripts": {
    "load": "composer dump-autoload -o",
    "fix": [
      "php ./vendor/bin/php-cs-fixer fix src",
      "php ./vendor/bin/php-cs-fixer fix tests"
    ],
    "action:test": "php vendor/bin/phpunit tests",
    "start": "php -dxdebug.start_with_request=yes -dxdebug.mode=debug ./bin/start -esrc/main.php -lsrc/lib/ -i",
    "watch": "php -dxdebug.start_with_request=yes -dxdebug.mode=debug ./bin/start -esrc/main.php -lsrc/lib/ -i -w"
  },
  "authors": [
    {
      "name": "Razvan Tanase",
      "email": "tangent.jotey@gmail.com",
      "homepage": "https://github.com/tncrazvan",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/lib/"
    }
  },
  "require": {
    "php": "^8.1",
    "catpaw/core": "^1.3",
    "amphp/amp": "^2.6",
    "amphp/file": "^2.0"
  },
  "autoload-dev": {
    "Tests\\": "tests/"
  },
  "require-dev":{
    "friendsofphp/php-cs-fixer": "^3.8",
    "phpunit/phpunit": "^9",
    "vimeo/psalm": "^4.23"
  },
  "config": {
    "preferred-install": "dist",
    "process-timeout": 0
  }
}
